type Message {
  id: String!
  user: String!
  createdAt: Time!
  text: String!
}

extend type Mutation {
  postMessage(user: String!, text: String!): Message
}

extend type Query {
  messages: [Message!]!
  users: [String!]!
}

type Subscription {
  messagePosted(user: String!): Message!
  userJoined(user: String!): String!
}
